.pa-indicator {
  transition: opacity 0.2s linear;
}

.pa-indicator {
  z-index: 9999;
  position: relative;
}

.pa-indicator-wrapper {
  padding: 15px;
  top: 50%;
  left: 50%;
  position: fixed;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  border-radius: 5px;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  box-sizing: border-box;
  text-align: center;
}

.pa-indicator-spin {
  display: inline-block;
  text-align: center;
}

.pa-indicator-mask {
  top: 0;
  left: 0;
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 0;
  background: transparent;
}

.pa-spinner-snake {
  -webkit-animation: pa-spinner-rotate .8s infinite linear;
  animation: pa-spinner-rotate .8s infinite linear;
  border: 4px solid transparent;
  border-radius: 50%;
  border-top-color: rgb(204, 204, 204);
  border-left-color: rgb(204, 204, 204);
  border-bottom-color: rgb(204, 204, 204);
  height: 32px;
  width: 32px;
}

@-webkit-keyframes pa-spinner-rotate {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

@keyframes pa-spinner-rotate {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

.pa-msgbox {
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
  background-color: #fff;
  width: 17.5rem;
  border-radius: 3px;
  font-size: 16px;
  -webkit-user-select: none;
  overflow: hidden;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transition: 0.2s;
  transition: 0.2s;
  z-index: 2001;
}

.pa-msgbox-header {
  padding: 15px 0 0;
}

.pa-msgbox-title {
  text-align: center;
  padding-left: 0;
  margin-bottom: 0;
  font-size: 18px;
  font-weight: 700;
  color: #333;
}

.pa-msgbox-content {
  padding: 10px 20px 15px;
  border-bottom: 1px solid #ddd;
  min-height: 36px;
  position: relative;
}

.pa-msgbox-message {
  color: #999;
  margin: 0;
  text-align: center;
  line-height: 36px;
  font-size: 16px;
}

.pa-msgbox-btns {
  display: flex;
  height: 40px;
  line-height: 40px;
}

.pa-msgbox-btn {
  line-height: 35px;
  display: block;
  background-color: #fff;
  flex: 1;
  margin: 0;
  border: 0;
  color: #26a2ff;
  width: 50%;
  font-size: 16px;
}

.mark-layer {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background: #000;
  z-index: 2000;
}
